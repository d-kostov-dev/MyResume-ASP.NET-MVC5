@model IEnumerable<MyResume.Web.Areas.Administration.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Courses";
}

@Html.Partial("_PageHeadingPartial")

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Name)
        .Sortable(true);

    columns.Add(x => x.Institution)
        .Sortable(true);

    columns.Add(x => x.FromYear)
        .Titled("From")
        .Sortable(true);

    columns.Add(x => x.ToYear)
        .Titled("To")
        .Sortable(true);

    // Buttons
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .RenderValueAs(x => Html.EditButton(x.Id.Value, isModal: true))
        .SetWidth(50);

    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .RenderValueAs(x => Html.DeleteButton(x.Id.Value))
        .SetWidth(50);

}).WithPaging(10)