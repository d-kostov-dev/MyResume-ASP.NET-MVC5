<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/animations")
    @Styles.Render("~/Content/custom")

    @RenderSection("styles", required: false)
</head>

<body>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-3">
                <div class="bs-component">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="/">Site Home</a></li>
                                @Html.MenuLink("Dashboard", "Index", "Dashboard", "Administration")
                                @Html.MenuLink("Settings", "Index", "SiteSettings", "Administration")
                                @Html.MenuLink("About", "Index", "ContactInformation", "Administration")
                                @Html.MenuLink("Experience", "Index", "Experience", "Administration")
                                @Html.MenuLink("Projects", "Index", "Projects", "Administration")
                                @Html.MenuLink("Education", "Index", "Education", "Administration")
                                @Html.MenuLink("Skills", "Index", "Skills", "Administration")
                                @Html.MenuLink("Courses", "Index", "Courses", "Administration")
                                @Html.MenuLink("Certifications", "Index", "Certifications", "Administration")
                                @Html.MenuLink("Recommendations", "Index", "Recommendations", "Administration")
                                @Html.MenuLink("Posts", "Index", "Posts", "Administration")
                                @Html.MenuLink("Categories", "Index", "Categories", "Administration")
                                @Html.MenuLink("Tags", "Index", "Tags", "Administration")
                            </ul>
                        </div>
                    </div>
                </div>
                <a href="~/Account/LogOff" class="btn btn-primary btn-block">Log Off</a>
            </div>
            <div class="col-md-9 panel panel-default animated fadeInUp">
                @RenderBody()
            </div>
        </div>
    </div>

    <div id="footer">
        <div class="container">
            <hr />
            <div class="row">
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
