@model IEnumerable<MyResume.Web.Areas.Administration.Models.ViewModels.SiteSettingsViewModel>

@{
    ViewBag.Title = "Site Settings";
}

@Html.Partial("_PageHeadingPartial")

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Name)
        .Sortable(true);

    columns.Add(x => x.Value)
        .Sortable(true);

    columns.Add(x => x.Description)
        .Sortable(true);

    // Buttons
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .RenderValueAs(x => Html.EditButton(x.Id, isModal: true))
        .SetWidth(50);
    
    // Deleting Settings is not allowed
    ////columns.Add()
    ////    .Encoded(false)
    ////    .Sanitized(false)
    ////    .RenderValueAs(x => Html.DeleteButton(x.Id))
    ////    .SetWidth(50);

}).WithPaging(10)

@section Scripts{
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
}

@section Styles{
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
}