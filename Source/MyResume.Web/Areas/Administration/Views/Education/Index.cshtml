@model IEnumerable<MyResume.Web.Areas.Administration.Models.ViewModels.EducationViewModel>

@{
    ViewBag.Title = "Education";
}

@Html.Partial("_PageHeadingPartial")

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Id)
        .Titled("Image")
        .RenderValueAs(x => Html.Action("ShowImage", "Images", new { id = x.ImageId }))
        .Encoded(false)
        .Sanitized(false);

    columns.Add(x => x.School)
        .Sortable(true);

    columns.Add(x => x.Field)
        .Sortable(true);

    columns.Add(x => x.Degree)
        .Sortable(true);

    columns.Add(x => x.FromYear)
        .Titled("From")
        .Sortable(true);

    columns.Add(x => x.ToYear)
       .Titled("To")
       .Sortable(true);

    columns.Add(x => x.SchoolSite)
       .Titled("Site")
       .Sortable(true);

    // Buttons
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .RenderValueAs(x => Html.EditButton(x.Id.Value, isModal: true))
        .SetWidth(50);

    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .RenderValueAs(x => Html.DeleteButton(x.Id.Value))
        .SetWidth(50);

}).WithPaging(10)