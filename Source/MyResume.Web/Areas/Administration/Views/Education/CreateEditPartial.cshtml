@model MyResume.Web.Areas.Administration.Models.InputModels.AddEditEducationInputModel

@{
    Layout = "../Shared/_AddEditLayout.cshtml";
    ViewBag.Title = "Add Education";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.Id)
